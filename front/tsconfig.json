{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "typeRoots": [
      "./types"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "ui/": [
        "./src/components/Ui"
      ],
      "@icons/*": [
        "./src/assets/icons/*"
      ]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "/src/**/*.ts",
    "**/src/**/*.ts",
    "**/__tests__/**/*.ts",
    "/src/**/*.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types",
    "next-env.d.ts",
    "next-auth.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
